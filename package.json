{
  "name": "devsonar",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered error monitoring system for local development",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "relay": "npm run dev --workspace=apps/relay-server",
    "backend": "npm run dev --workspace=apps/backend",
    "frontend": "npm run dev --workspace=apps/frontend"
  },
  "devDependencies": {
    "turbo": "^2.2.3"
  },
  "packageManager": "npm@11.2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
