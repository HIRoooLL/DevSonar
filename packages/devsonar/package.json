{
  "name": "devsonar",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered error monitoring for local development",
  "bin": {
    "devsonar": "./bin/devsonar.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./register": "./dist/register.js"
  },
  "files": [
    "dist",
    "bin",
    "dashboard"
  ],
  "scripts": {
    "build": "tsc",
    "build:dashboard": "cd ../../apps/frontend && npm run build && cp -r dist ../../packages/devsonar/dashboard",
    "clean": "rm -rf dist dashboard"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
